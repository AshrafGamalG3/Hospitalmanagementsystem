<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.reception.presentaion.RequestCompleteFragment">


    <ImageView
        android:id="@+id/image_successful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_successfull"
        app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:id="@+id/text_massage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/green"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_14sdp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_15sdp"
        android:text="@string/the_request_has_been_canceled_successfully"
        app:layout_constraintTop_toBottomOf="@+id/image_successful"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:cornerRadius="@dimen/_10sdp"
        android:fontFamily="@font/cairo_bold"
        android:paddingVertical="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/back_to_home"
        android:textAllCaps="false"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/main_color"
        />

</androidx.constraintlayout.widget.ConstraintLayout>